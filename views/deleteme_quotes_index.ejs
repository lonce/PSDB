<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>PSoundSet</title>

    <script defer src="/main.js"></script>
  </head>

  <body>
    <h1>Parameterized Sound Set (new & update)</h1>

    <form action="/quotes" method="POST">
      <input id="name" type="text" placeholder="name" name="name" />
      <input id="quote" type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>

    <h2> Quotes </h2>

    <ul class="quotes">
      <!-- Loop through quotes -->
      <% for(var i = 0; i < quotes.length; i++) {%>
        <li class="quote">
          <input class="soundNameButt" type="text" style="width:10em" value=<%= quotes[i]._id %> />
          <!-- Output name from the iterated quote object -->
          <span><%= quotes[i].name %></span>:
          <!-- Output quote from the iterated quote object -->
          <span><%= quotes[i].quote %></span>
        </li>
      <% } %>
    </ul>
    
  </body>
</html>